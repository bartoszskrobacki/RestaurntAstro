---
import '@styles/base.css'
import Navbar from '@components/navbar/Navbar.astro'
import Footer from '@components/footer/Footer.astro'
import emailjs from '@emailjs/browser'

interface Props {
	title: string
}
const EMAIL_JS = import.meta.env.EMAIL_JS_PUBLIC_KEY
const { title } = Astro.props
emailjs.init(EMAIL_JS)
---

<!doctype html>
<html lang="en">
	<head>
		<title>{title}</title>

		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta
			name="description"
			content="Zapraszamy do naszego baru, gdzie świeże i smaczne dania serwowane są ekspresowo. Przyjemna atmosfera i bogata oferta smaków czekają na Ciebie każdego dnia!"
		/>
		<link rel="icon" type="image/svg+xml" href="/favicon.png" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Maven+Pro:wght@400..900&display=swap"
			rel="stylesheet"
		/>
		<script
			src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD5X9FwOeRSiGuIskn9AeAavg4yZJxCgd0"
			is:inline></script>
		<noscript>
			<link
				href="https://fonts.googleapis.com/css2?family=Inconsolata:wght@200..900&display=swap"
				rel="stylesheet"
				type="text/css"
			/>
		</noscript>
	</head>
	<body>
		<Navbar />
		<slot />
		<Footer />
	</body>
</html>
