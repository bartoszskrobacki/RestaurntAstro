---
import '@styles/base.css'
import Navbar from '@components/navbar/Navbar.astro'
import Footer from '@components/footer/Footer.astro'
import emailjs from '@emailjs/browser'
import { ViewTransitions } from 'astro:transitions'

interface Props {
	title: string
}
const EMAIL_JS = import.meta.env.EMAIL_JS_PUBLIC_KEY
const { title } = Astro.props
emailjs.init(EMAIL_JS)
---

<!doctype html>
<html lang="en">
	<head>
		<title>{title}</title>
		<ViewTransitions />
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
		<meta
			name="description"
			content="Zapraszamy do naszego baru, gdzie świeże i smaczne dania serwowane są ekspresowo. Przyjemna atmosfera i bogata oferta smaków czekają na Ciebie każdego dnia!"
		/>
		<link rel="icon" type="image/svg+xml" href="/favicon.png" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Maven+Pro:wght@400..900&display=swap"
			rel="stylesheet"
		/>
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://obiady-gliwice.pl/" />
		<meta property="og:title" content="Bar u Piotra" />
		<meta property="og:image" content="https://obiady-gliwice.pl/favicon.png" />
		<meta property="og:description" content="Codzienne pyszne obiady" />
		<meta property="og:site_name" content="Bar u Piotra" />
		<meta property="og:locale" content="pl_PL" />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
	</head>
	<body>
		<Navbar />
		<slot />
		<Footer />
	</body>
</html>
