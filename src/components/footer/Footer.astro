---
import Icon from '@components/shared/Icon.astro'
import Image from 'node_modules/astro/components/Image.astro'
import kpr_banner from '@media/images/kpr_banner.webp'
---

<div class="bottom-0 flex w-full bg-primary-800 text-primary">
	<div
		class="flex w-full flex-col items-center justify-center gap-8 px-11 py-11 md:flex-row md:items-start md:justify-between md:gap-20 xl:px-80"
	>
		<div class="flex h-full w-full flex-col">
			<h2>Bar u Piotra</h2>
			<div class="flex h-full flex-col justify-between">
				<a href="https://www.facebook.com/obiadygliwice" class="w-8 after:border-transparent">
					<Icon icon="facebook" />
				</a>
				<a href="/cele" class="my-4">
					<Image src={kpr_banner} alt="Banner z promocjami" class="mx-auto" />
				</a>
			</div>
		</div>

		<div class="flex w-full flex-col">
			<h2>Godziny otwarcia</h2>
			<div class="flex flex-col gap-3">
				<span class="font-bold">Poniedziałek-Piątek</span>
				<span>10.00-18.00</span>
				<span class="font-bold">Sobota</span>
				<span>10.00-16.00</span>
				<span class="font-bold">Niedziela</span>
				<span>11.00-16.00</span>
			</div>
		</div>
		<div class="flex w-full flex-col">
			<h2>Kontakt</h2>
			<div class="flex flex-col gap-3">
				<span class="font-bold">Telefon</span>
				<a href="tel:32 232 24 02"><span> 32 232 24 02</span></a>
				<a href="tel:570 100 110"><span> 570 100 110</span></a>
				<span class="font-bold">Adres</span>
				<span>Zwycięsta 17, Gliwice</span>
			</div>
		</div>
	</div>
</div>
